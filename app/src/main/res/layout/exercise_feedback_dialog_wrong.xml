<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_wrong"
    android:layout_margin="6dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/FeedbackWrong"
        android:textSize="35sp"
        android:textAlignment="center"
        android:padding="@dimen/PaddingSide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/FeedbackWrongPreviousButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Lesson"
            android:background="@drawable/button_altert_red"
            android:layout_weight="1"/>


        <Button
        android:id="@+id/FeedbackWrongTryAgainButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:text="Try Again"
        android:background="@drawable/button_altert_red"
        android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>