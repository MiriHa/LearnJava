<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_right"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/FeedbackRight"
        android:textSize="@dimen/TextSize30"
        android:textAlignment="center"
        android:padding="@dimen/PaddingSide"/>

    <Button
        android:id="@+id/FeedbackRightButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="Next Lesson"
        android:background="@drawable/button_altert_green"/>


</LinearLayout>