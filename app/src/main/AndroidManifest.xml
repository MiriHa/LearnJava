<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lmu.learnjava">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.lmu.learnjava.controller.Controller"
        android:allowBackup="true"
        android:icon="@drawable/icon_learn_java"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_learn_java"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lmu.learnjava.view_registration.SignUpActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name="com.lmu.learnjava.view_registration.LogInActivity"
                  android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
            <action android:name="android.intent.action.VIEW" />
        </intent-filter>
        </activity>

        <activity
            android:name="com.lmu.learnjava.view_sections.LessonActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity android:name="com.lmu.learnjava.view_sections.MainActivity"
                  android:screenOrientation="portrait"/>

    </application>

</manifest>